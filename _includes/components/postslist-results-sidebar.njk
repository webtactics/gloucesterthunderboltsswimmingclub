<section class="resultssum" >
	{% for post in postslist %}
<summary class="grid-100x1fr resultssummarysmall">


{% if post.data.rain %}
<div class="resultssumsmallimage">
<img src="{{ post.data.image }}/tr:w-100,h-100" alt="{{ post.data.title }}" title="{{ post.data.title }}" width="100px" height="auto" class="postslist-results-sidebar-img">
</div>

<div class="resultssumsmallcontent">
<div class="postsumtitle">
<h4>{{ post.data.subtitle }}</h4>
</div>
<div class="postsumdatesmall">
<p>{{ post.data.eventdate.day }} {{ post.data.eventdate.month }}, {{ post.data.eventdate.year }}</p>
</div>
<div class="cancelled">
<h4>Rained off.</h4>
</div>
</div>
{% else %}


			
<div class="resultssumsmallimage">
<a href="{{ post.data.results }}" target="_blank"><img src="{{ post.data.image }}/tr:w-100,h-100" alt="{{ post.data.title }}" title="{{ post.data.title }}" width="100px" height="auto" class="postslist-results-sidebar-img"></a>
</div>

<div class="resultssumsmallcontent">
<div class="postsumtitle">
<h4><a href="{{ post.data.results }}" title="{{ post.data.title }}" alt="{{ post.data.title }}"target="_blank">{{ post.data.subtitle }}</a></h4>
</div>
<div class="postsumdatesmall">
<p>{{ post.data.eventdate.day }} {{ post.data.eventdate.month }}, {{ post.data.eventdate.year }}</p>
</div>
<a class="resultspdfsmall" href="{{ post.data.results }}" title="{{ post.data.title }}" alt="{{ post.data.title }}" target="_blank">Results Pdf &gt;</a>
</div>				
{% endif %}

</summary>
		
	{% endfor %}
</section>